@model BookUpdateOrCreateModel

<div class="col col-md-6">
    <container>
        <h2>Add New Book</h2>
        <form asp-action="Create" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="authorName">Author Name</label>
                <input type="text" class="form-control" asp-for="AuthorName" />
                <span asp-validation-for="AuthorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="publisherName">Publisher Name</label>
                <input type="text" class="form-control" asp-for="PublisherName" />
                <span asp-validation-for="PublisherName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="publisherName">Page Count</label>
                <input type="text" class="form-control" asp-for="PageCount" />
                <span asp-validation-for="PageCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="">Stock</label>
                <input type="text" class="form-control" asp-for="Stock" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="publisherName">Category</label>
                <input type="text" class="form-control" asp-for="Category" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group date">
                <label for="publisherName">Publication Date</label>
                <input type="date" class="form-control" asp-for="PublicationDate" />
                <span asp-validation-for="PublicationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <img id="imgPreview" src="" class="img-fluid" style="max-height: 100px" />
                <br />
                <label>Image</label>
                <input type="file" id="formFile" class="form-control" data-default-file="" asp-for="Image" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <br>
            <button type="submit" class="btn btn-primary">Add New Book</button>
        </form>
    </container>
</div>

@section Scripts
    {

    <script>
        $(document).ready(function () {

            $('#formFile').change(function () {
                const file = this.files[0];
                if (file) {
                    let reader = new FileReader();
                    reader.onload = function (event) {
                        $('#imgPreview').attr('src', event.target.result);
                    }
                    reader.readAsDataURL(file);
                }
            });

        });
    </script>

    @if (ViewBag.SuccessMessage != null)
    {
        <script>
            swal({
                title: '@Html.Raw(ViewBag.SuccessMessage.ToString())',
                icon: 'success'
            });
        </script>
    }

    @if (ViewBag.ErrorMessage != null)
    {
        <script>

            sweetAlert({
                title: '@Html.Raw(ViewBag.ErrorMessage.ToString())',
                icon: 'error'
            });
        </script>
    }
}