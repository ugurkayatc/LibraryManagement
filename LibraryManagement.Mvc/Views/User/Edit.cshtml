@using Microsoft.AspNetCore.Mvc.TagHelpers
@model UserUpdateOrCreateModel

@{
    ViewData["Title"] = "User Edit";
}

<div class="col col-md-6">
    <container>
        <h2>User Edit</h2>
        <form asp-action="Edit" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" class="form-control" asp-for="FullName"/>
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="authorName">Author Name:</label>
                <input type="text" class="form-control"  asp-for="Email"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="publisherName">Publisher Name:</label>
                <input type="text" class="form-control"  asp-for="Gsm"/>
                <span asp-validation-for="Gsm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="pageCount">Page Count:</label>
                <textarea class="form-control" asp-for="Address"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <br>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </container>
</div>

@section Scripts
{
    @if (ViewBag.SuccessMessage != null)
    {
        <script>
            swal({
                title: '@Html.Raw(ViewBag.SuccessMessage.ToString())',
                icon: 'success'
            });
        </script>
    }

    @if (ViewBag.ErrorMessage != null)
    {
        <script>
    
            sweetAlert({
                title: '@Html.Raw(ViewBag.ErrorMessage.ToString())',
                icon: 'error'
            });
        </script>
    }
}